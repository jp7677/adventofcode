root = true

[*]
indent_style = space
indent_size = 4

end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{kt,kts}]
disabled_rules = multiline-if-else,trailing-comma-on-call-site,trailing-comma-on-declaration-site
ktlint_disabled_rules = multiline-if-else,trailing-comma-on-call-site,trailing-comma-on-declaration-site
